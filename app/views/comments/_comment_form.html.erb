<% unless current_user.has_roles?(:guest) %>
  <%= form_for @comment, url: '#' do |form| %>
    <div class="form-group">
      <%= form.text_area :content, placeholder: "Comments? We'd love to hear them!", class: 'form-control' %>
    </div>

    <%= form.submit 'Post Comment', class: 'btn btn-primary' %>
  <% end %>
<% end %>
