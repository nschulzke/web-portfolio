<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <%= gritter array_to_ul(post.errors.full_messages), title: pluralize(post.errors.count, "error") %>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title, id: :post_title, class: 'form-control', placeholder: 'Title' %>
  </div>

  <div class="form-group">
    <%=
    form.collection_select(:topic_id, Topic.all, :id, :title, {
        selected: post.topic_id,
        prompt: "Select a Topic"
    }, class: 'form-control' )
    %>
  </div>

  <div class="form-group">
    <%= form.text_area :body, id: :post_body, class: 'form-control', rows: 15, placeholder: 'Content' %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>
