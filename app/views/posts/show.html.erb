<h2 class="blog-post-title"><%= @post.title %></h2>
<%= render 'post_options', post: @post %>
<p class="blog-post-meta"><%= metadata_helper @post %></p>
<p class="blog-post-meta"><%= @post.topic.title %></p>
<p>
  <%= @post.body %>

  <%= render 'comments/comment_form' %>
  <div id="comments" data-post-id="<%= @post.id %>">
    <%= render @post.comments %>
  </div>
</p>
