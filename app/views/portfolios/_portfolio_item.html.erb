<div>
  <h2><%= link_to portfolio_item.title, show_portfolio_path(portfolio_item) %></h2>
  <div><%= link_to "Edit", edit_portfolio_path(portfolio_item) if logged_in?(:site_admin) %> | <%= link_to "Delete", portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %></div>
  <div><%= portfolio_item.subtitle %></div>
  <div><%= portfolio_item.body %></div>
  <%=  image_tag portfolio_item.thumb_image if portfolio_item.thumb_image? %>
</div>