<%= form_for(portfolio_item) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.text_field :title, id: :portfolio_title, class: 'form-control', placeholder: 'Title' %>
      </div>

      <div class="form-group">
        <%= form.text_field :subtitle, id: :portfolio_subtitle, class: 'form-control', placeholder: 'Subtitle' %>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
          Upload a Main Image <%= form.file_field :main_image, style: 'display:none;' %>
        </label>
        <span class="file-name"></span>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
          Upload a Thumb Image <%= form.file_field :thumb_image, style: 'display:none;' %>
        </label>
        <span class="file-name"></span>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.text_area :body, id: :portfolio_body, class: 'form-control', rows: 12, placeholder: 'Content' %>
      </div>
    </div>
    <div class="col-md-12">
      <hr>
      <h3>Technologies used</h3>
      <div class="nested-fields">
        <%= form.fields_for :technologies do |technology_form| %>
          <%= render 'technology_fields', f: technology_form %>
        <% end %>
        <div>
          <%= link_to_add_association 'Add Technology', form, :technologies %>
        </div>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Save Portfolio Item', class: 'btn btn-primary' %>
  </div>
<% end %>
