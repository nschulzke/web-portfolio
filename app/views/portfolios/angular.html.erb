<h1>Portfolio Items</h1>
<%= link_to "Create New Item", new_portfolio_path if logged_in?(:site_admin) %>
<div>
  <% @portfolio_items.each do |item| %>
  <div>
    <h2><%= link_to item.title, show_portfolio_path(item) %></h2>
    <div><%= link_to "Edit", edit_portfolio_path(item) if logged_in?(:site_admin) %> | <%= link_to "Delete", item, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %></div>
    <div><%= item.subtitle %></div>
    <div><%= item.body %></div>
    <%=  image_tag item.thumb_image if item.thumb_image? %>
  </div>
  <% end %>
</div>